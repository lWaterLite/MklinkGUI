<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <FontFamily x:Key="IconFont">pack://application:,,,/Assets/#folktrigger</FontFamily>
    
    <SolidColorBrush x:Key="ApplicationWindowChromeBackgroundBrush" Color="#202020" />
    <SolidColorBrush x:Key="ApplicationContentBackgroundBrush" Color="#262626" />
    <SolidColorBrush x:Key="ApplicationForegroundBrush" Color="White" />
    
    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="Microsoft Yahei" />
        <Setter Property="Foreground" Value="{StaticResource ApplicationForegroundBrush}" />
    </Style>
</ResourceDictionary>